<h1> News Portal </h1>
<% @news.each do |news| %>
	<h2><%= link_to news.title, news %></h2>
	<div id="content">
		<%= news.description %>
		<% if user_signed_in? %>
			<%= link_to "Edit", [:edit, news] %>
			<%= button_to "Delete", news, :confirm => "Are you shure?", :method => :delete %>
		<% end %>
	</div>
<% end %>
<hr/>
<% if user_signed_in? %>
	<%= link_to "Add News", new_news_path %>
<% end %>